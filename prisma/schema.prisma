datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  lastname  String?
  googleId  String?
  firstname String?
  avatar    String?
  posts     Habit[]
  role      Role
}

model Habit {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order     Int
  name      String   @unique
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model HabitDates {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      DateTime
}

enum Role {
  ADMIN
  USER
}
